    </div>

    <script>
        $(document).ready(function () {
            $('.demo_lock').attr('disabled', 'disabled');
            //$('.demo_lock').attr('href', '#');
            //$(".demo_lock").click(function (event) {
            //    event.stopPropagation();
            //});
        }); 
    </script>
}

