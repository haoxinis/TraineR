@using System.App.Model.Resources
@using System.App.Model.Enums
@using System.App.Web.TraineR.Models

@{
    ViewBag.Title = Resource.SystemTool;
}

<script>
    $(document).ready(function () {
        $('a.btn').attr('target', '_blank');
    });    
</script>

