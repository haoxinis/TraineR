@using System.App.Model.Resources
@using System.App.Utility.Helpers
@using System.App.Web.TraineR.Models.Domain
@using System.App.Model.Enums
@using System.App.Web.TraineR.Services

<script>
$(document).ready(function(){
  $('[data-toggle="popover"]').popover();
});
</script>

<style>
    .cell > div {
        border-style: dotted;
        border-width: thin;
        margin-top: 10px;
        margin-bottom:10px;
        padding: 10px;
        border-radius: 10px;
        min-height: 145px;
    }

    .cell img {
        margin:15px;
    }
</style>

@{
    var db = new NewbornContainer(Resource.lan);
    var token = XorEncryptor.Encrypt(DateTime.Now.ToString("yyyyMMdd"));
}

<br />

<div class="container">

    <h4>@Resource.Quiz</h4>

    <div class="row">
        <div class="col-md-6 col-lg-4 col-sm-12 col-xs-12 center-block text-center cell"
             align="center">
            <div>
                <div style="float: left">
                    <img width="100%" src="@Url.Content("/Assets/quiz.png")" />
                </div>
                <h5>
                    <b>
                        @Resource.Title_TraineR
                    </b>
                </h5>
                <p>
                    @Resource.Message_TakeQuiz
                </p>
                <p>
                    @Html.ActionLink(Resource.SelfTest, "QuizInner", new { token = token }, new { @class = "btn btn-danger" })
                </p>
            </div>            
        </div>
    </div>

    <br />


    <h4>@Resource.Course</h4>
    <div class="row">
        @{
            var grps = db.FundusImageForQuizQuery.GroupBy(x => x.LabelCode, (k, v) => new { key = k, a = v.Select(y => y.Id), c = v.Count() }).ToList();
            foreach (var g in grps)
            {
                if (string.IsNullOrWhiteSpace(g.key))
                {
                    continue;
                }

                var desc = "";
                var entry = db.DiagnosisStandardTermQuery.FirstOrDefault(x => x.Code == g.key);
                if (entry != null)
                {
                    desc = entry.Description;
                }

                var readable_name = TerminologyService.GetReadableStringFromDiagnosisCode(g.key, Resource.lan);

                <div class="col-md-6 col-lg-4 col-sm-12 col-xs-12 center-block text-center cell"
                     align="center">
                    <div>
                        <div style="float: left">
                            <img width="100%" src="@Url.Content("/Assets/quiz.png")" />
                        </div>
                        <h5 title="@g.key">
                            @readable_name
                            <span class="badge">@Resource.ImageCount：@g.c</span>
                        </h5>
                        <h5>@g.key</h5>

                        <p>
                            <a href="#" data-toggle="popover" title="@readable_name" data-content="@desc" class="btn btn-success">@Resource.DiseaseIntro</a>
                            @Html.ActionLink(Resource.TakeCourse, "QuizInner", new { labelcode = g.key, token = token }, new { @class = "btn btn-success" })
                        </p>
                    </div>
                </div>
            }
        }
    </div>

</div>